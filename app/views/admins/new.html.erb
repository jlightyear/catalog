<% @page_title = "new Admin Users" %>

<div>
  <ul class="pager">
      <li class="previous">
        <%= link_to admins_path do %>
          <span aria-hidden='true'>&larr;</span> Volver al listado
        <% end %>
      </li>
    </ul>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">Create Admin</h3>
      </div>
      <div class="panel-body">
        <%= form_for(:admin, :url => {:action => 'create'}) do |f| %>
      		<%= render(:partial => "form", :locals => {:f => f}) %>
      		<%= submit_tag("Create Admin", :class => "btn btn-primary") %>
        <% end %>
      </div>
    </div>
  </div>
</div>
