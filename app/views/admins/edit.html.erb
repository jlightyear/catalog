<% @page_title = "Edit Admin" %>

<div>
  <ul class="pager">
      <li class="previous">
        <%= link_to admins_path do %>
          <span aria-hidden='true'>&larr;</span> Volver al listado
        <% end %>
      </li>
    </ul>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Admin</h3>
      </div>
      <div class="panel-body">
        <%= form_for(:admin, :url => admin_path(@admin.id), :method => :patch) do |f| %>
          <%= render(:partial => "form", :locals => {:f => f}) %>
          <%= submit_tag("Update Admin", :class => "btn btn-primary") %>
        <% end %>
      </div>
    </div>
  </div>
</div>
