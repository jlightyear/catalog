<% @page_title = "Admin User" %>

<div class="admin new">
  <h2>Create first Admin</h2>

  <%= form_for(:start, :url => {:action => 'create'}) do |f| %>

    <%= error_messages_for(@admin) %>

    <table summary="Admin form fields">
      <tr>
        <th><%= f.label(:username, "Username") %></th>
        <td><%= f.text_field :username %></td>
      </tr>
      <tr>
        <th><%= f.label(:email, "Email") %></th>
        <td><%= f.text_field(:email) %></td>
      </tr>
      <tr>
        <th><%= f.label(:password, "Password") %></th>
        <td><%= f.password_field :password %></td>
      </tr>
      <tr>
        <th><%= f.label(:password_confirmation, "Password confirmation") %></th>
        <td><%= f.password_field :password_confirmation %></td>
      </tr>
    </table>

    <div class="form-buttons">
      <%= submit_tag("Create Admin") %>
    </div>
    
  <% end %>
</div>
