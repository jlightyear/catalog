<!DOCTYPE html>
<html>
	<head>
		<title>Catálogo | <%= @page_title %></title>
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
	</head>
	<body>
    <!-- Wrap all page content here -->
    <div id="wrap">
      <!-- Navigation -->
      <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <span class="navbar-brand">Administración del catálogo - <%= @page_title %></span>
          </div>
          <div class="nav navbar-nav navbar-right">
            <% if session[:admin_username] %>
              <p class="navbar-text">Logueado como <%= link_to(session[:admin_username], edit_admin_path(:id => session['admin_id']), :class => "navbar-link" ) %><% if session[:super_admin] %> - SuperAdmin<% end %></p>
            <% end %>
          </div>
        </div>
        <!-- /.container -->
      </nav>

      <div class="container">
        <div id="main">
    			<% if !flash[:notice].blank? %>
    				<div class="alert alert-success">
    					<%= flash[:notice] %>
    				</div>
    			<% end %>

          <% if !flash[:alert].blank? %>
            <div class="alert alert-danger">
              <%= flash[:alert] %>
            </div>
          <% end %>
    				<%= yield %>
    		</div>
      </div>
      
      <div id="push"></div>
    
    </div>

    <div id="footer">
      <div class="container">
        <p class="muted credit">&copy; - José Luis Estrach.</p>
      </div>
    </div>
    
	</body>
</html>
