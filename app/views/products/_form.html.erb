<div class="form-group">
  <%= error_messages_for(@product) %>
</div>
<div class="form-group">
  <%= f.label(:preproduct_id, "Preproducto", :class => "control-label") %>
  <%= f.select :preproduct_id, @section.preproducts.map {|p| [p.titulo, p.id]}, {}, {:class => "form-control"} %>
</div>
<div class="form-group">
  <%= f.label(:color_id, "Color", :class => "control-label") %>
  <%= f.select :color_id, @colors.map {|c| [c.color, c.id]}, {}, {:class => "form-control"} %>
</div>
<div class="form-group">
  <%= f.label(:titulo, "Título", :class => "control-label") %>
  <%= f.text_field :titulo, :class => "form-control" %>
</div>
<div class="form-group">
  <%= f.label(:descripcion, "Descripción") %>
  <%= f.text_area :descripcion, :size => "40x5", :class => "form-control" %>
</div>
<div class="form-group">
  <%= f.label(:precio, "Precio", :class => "control-label") %>
  <%= f.text_field :precio, :class => "form-control" %>
</div>
<div class="form-group">
  <%= f.label(:image, "Imagen") %>
  <%= image_tag @product.image.url(:thumb) if @product.image? %>
  <%= f.file_field :image, :title => "Buscar imagen" %>
</div>