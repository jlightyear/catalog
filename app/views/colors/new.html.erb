<% @page_title = "Color" %>

<div>
  <ul class="pager">
    <li class="previous">
      <%= link_to colors_path do %>
        <span aria-hidden='true'>&larr;</span> Volver al listado
      <% end %>
    </li>
  </ul>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">Crear Color</h3>
      </div>
      <div class="panel-body">
      <%= form_for(:color, :url => {:action => 'create'}) do |f| %>
        <%= render(:partial => "form", :locals => {:f => f}) %>
        <div class="form-buttons">
          <%= submit_tag("Create color", :class => "btn btn-primary") %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
