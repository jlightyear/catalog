<% @page_title = @product.titulo %>

<div>
  <ul class="pager">
    <li class="previous">
      <%= link_to search_index_path(:searchbox => params[:searchbox]) do %>
        <span aria-hidden='true'>&larr;</span> Volver al listado
      <% end %>
    </li>
  </ul>
</div>

<!-- Page Content -->
<div class="container">
  <!-- Portfolio Item Row -->
  <div class="row">
    <div class="col-md-5 col-md-offset-1">
      <%= link_to @product.image.url(:large), :class => "fancy-box", :title => @product.titulo do %>
        <%= image_tag @product.image.url(:standard), :class => "img-responsive", :title => @product.titulo %>
      <% end %>
    </div>

    <div class="col-md-5">
      <br /><br />
      <div class="panel panel-info">
        <div class="panel-heading">
          <h2 class="panel-title"><%= @product.titulo %></h2>
        </div>
      </div>
      <p><%= @product.descripcion %></p>
      <p>Precio: <%= number_to_currency(@product.precio, :precision => 0, :unit => "â‚¬", :format => "%n %u") %></p>
      <p>Referencia: <%= @product.ref_pro %></p>
      <br /><br />
      <div>
        <ul class="pager">
            <li class="previous">
              <%= link_to search_show_path(:product_id => @previous_product, :searchbox => params[:searchbox]) do %>
                <span aria-hidden='true'>&laquo;</span> Anterior
              <% end %>
            </li>
            <li class="next">
              <%= link_to search_show_path(:product_id => @next_product, :searchbox => params[:searchbox]) do %>
                Siguiente <span aria-hidden='true'>&raquo;</span>
              <% end %>
            </li>
          </ul>
      </div>
    </div>
  </div>
  <!-- /.row -->
</div>
