<% @page_title = @product.titulo %>
<!-- Page Content -->
<div class="container">
  <!-- Portfolio Item Row -->
  <div class="row">
    <div class="col-md-6">
      <%= link_to @product.image.url(:large), :class => "fancy-box", :title => @product.titulo do %>
        <%= image_tag @product.image.url(:standard), :class => "img-responsive", :title => @product.titulo %>
      <% end %>
      <p><%= link_to("Volver", search_index_path(:searchbox => params[:searchbox])) %></p>
    </div>

    <div class="col-md-6">
      <br /><br />
      <h3><%= @product.titulo %></h3>
      <p><%= @product.descripcion %></p>
      <p>Precio: <%= number_to_currency(@product.precio, :precision => 0, :unit => "â‚¬", :format => "%n %u") %></p>
      <p>Referencia: <%= @product.ref_pro %></p>
      <br /><br />
      <p><%= link_to("Anterior", search_show_path(:product_id => @previous_product, :searchbox => params[:searchbox])) %> - <%= link_to("Siguiente", search_show_path(:product_id => @next_product, :searchbox => params[:searchbox])) %></p>
    </div>
  </div>
  <!-- /.row -->
</div>
